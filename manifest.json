{
  "manifest_version": 3,
  "name": "Simple Site Blocker",
  "version": "1.0",
  "description": "Block distracting or adult sites with simple patterns.",
  "permissions": ["declarativeNetRequestWithHostAccess", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
